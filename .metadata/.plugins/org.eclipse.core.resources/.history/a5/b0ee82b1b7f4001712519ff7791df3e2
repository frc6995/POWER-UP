package org.usfirst.frc.team6995.robot.definitions;

public class Ramp {
	
	public static double ramp(double number, double max) {
		double sinFunc = (max/2)*(1+Math.sin((number*Math.PI)-(Math.PI/2)));
		if (sinFunc > max) return max;
		return sinFunc*number;
	}
	
	public static void throwIfRampIsInvalid(double number, double max) throws IllegalArgumentException {
	    if (number > max) {
	      throw new IllegalArgumentException(
	          String.format("number %f is invalid; valid ranges are %f..%f", number, max));
	    }
	  }
}
